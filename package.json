{
  "name": "minimal-shop",
  "version": "1.0.0",
  "description": "E-commerce minimalista com Node.js e MongoDB",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development HOST=0.0.0.0 PORT=3000 nodemon server.js",
    "prod": "NODE_ENV=production HOST=0.0.0.0 PORT=10000 node server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "docker:build": "docker build -t purecarebrasil .",
    "docker:run": "docker run -p 10000:10000 -e NODE_ENV=production -e PORT=10000 -e HOST=0.0.0.0 --name purecarebrasil purecarebrasil"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.9.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NathanCesar1290/MinimalShop.git"
  },
  "keywords": [
    "ecommerce",
    "node",
    "express",
    "mongodb",
    "shopping"
  ],
