# Server
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://seu-dominio.com

# Database
MONGODB_URI=mongodb+srv://seu-usuario:senha@seu-cluster.mongodb.net/minimal-shop
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=seu_segredo_jwt_32_caracteres
JWT_EXPIRES_IN=90d
JWT_COOKIE_EXPIRES_IN=90

# Email (SendGrid)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASS=seu_api_key_sendgrid
EMAIL_FROM="Minimal Shop <contato@seu-dominio.com>"

# Pagamento (Stripe)
STRIPE_SECRET_KEY=seu_chave_secreta_stripe
STRIPE_WEBHOOK_SECRET=seu_chave_webhook_stripe

# Admin
ADMIN_EMAIL=admin@seu-dominio.com
ADMIN_PASSWORD=senha_forte_admin

# Segurança
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Redis (se usar Redis em produção)
REDIS_HOST=seu_redis_host
REDIS_PORT=6379
REDIS_PASSWORD=seu_redis_password

# Logs
LOG_LEVEL=info
LOG_DIR=/var/log/minimal-shop

# Backup
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=7

# Monitoramento
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# CORS
ALLOWED_ORIGINS=https://seu-dominio.com,https://www.seu-dominio.com

# SSL
SSL_CERT_PATH=/etc/letsencrypt/live/seu-dominio.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/seu-dominio.com/privkey.pem
RATE_LIMIT_MAX=100
